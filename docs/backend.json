
{
  "entities": {
    "log": {
      "title": "Log",
      "description": "A check-in log entry.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The full name of the employee."
        },
        "id": {
          "type": "string",
          "description": "The employee ID."
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "The time of the check-in attempt."
        },
        "status": {
          "type": "string",
          "enum": ["Sucesso", "Falhou", "Erro"],
          "description": "The status of the check-in."
        },
        "details": {
          "type": "string",
          "description": "Details about the check-in attempt."
        }
      },
      "required": ["name", "id", "timestamp", "status", "details"]
    },
    "driver": {
      "title": "Driver",
      "description": "Represents a driver and their vehicle information.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The full name of the driver."
        },
        "id": {
          "type": "string",
          "description": "The unique ID for the driver (e.g., employee ID)."
        },
        "vehicle": {
          "type": "string",
          "description": "The model of the vehicle (e.g., 'Fiat Fiorino')."
        },
        "plate": {
          "type": "string",
          "description": "The license plate of the vehicle."
        }
      },
      "required": ["name", "id", "vehicle", "plate"]
    }
  },
  "auth": {
    "providers": ["google.com"]
  },
  "firestore": {
    "/logs/{logId}": {
      "schema": {
        "$ref": "#/entities/log"
      },
      "description": "Stores individual check-in log entries."
    },
    "/drivers/{driverId}": {
      "schema": {
        "$ref": "#/entities/driver"
      },
      "description": "Stores driver information."
    }
  }
}
